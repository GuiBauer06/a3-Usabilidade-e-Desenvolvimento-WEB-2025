<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    
    <display-name>Sistema de Controle de Estoque</display-name>
    
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    
    <!-- Servlets -->
    <servlet>
        <servlet-name>ProdutoServlet</servlet-name>
        <servlet-class>com.estoque.servlet.ProdutoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProdutoServlet</servlet-name>
        <url-pattern>/produto</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>CategoriaServlet</servlet-name>
        <servlet-class>com.estoque.servlet.CategoriaServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CategoriaServlet</servlet-name>
        <url-pattern>/categoria</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>MovimentacaoServlet</servlet-name>
        <servlet-class>com.estoque.servlet.MovimentacaoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MovimentacaoServlet</servlet-name>
        <url-pattern>/movimentacao</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>ReajustePrecoServlet</servlet-name>
        <servlet-class>com.estoque.servlet.ReajustePrecoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReajustePrecoServlet</servlet-name>
        <url-pattern>/reajuste-preco</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>RelatorioServlet</servlet-name>
        <servlet-class>com.estoque.servlet.RelatorioServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RelatorioServlet</servlet-name>
        <url-pattern>/relatorio</url-pattern>
    </servlet-mapping>
    
</web-app>

